<UserControl x:Class="aCHADemia.View.UserControls.BackButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             x:Name="root">

    <Button Command="{Binding Command, ElementName=root}"
            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
            Padding="8,4">
        <StackPanel Orientation="Horizontal">
            <fa:ImageAwesome Icon="ArrowLeft" 
                           Width="16"
                           Height="16"
                           Margin="0,0,5,0"
                           Foreground="{Binding IconBrush, ElementName=root}"/>
            <TextBlock Text="{Binding Text, ElementName=root}"
                       VerticalAlignment="Center"
                       FontFamily="{StaticResource NormalFont}"
                       FontSize="16"
                       Foreground="{Binding TextBrush, ElementName=root}"/>
        </StackPanel>
    </Button>
</UserControl>