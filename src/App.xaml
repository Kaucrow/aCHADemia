<Application x:Class="aCHADemia.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:aCHADemia">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="LightPrimaryColor">#FF293136</Color>
            <SolidColorBrush x:Key="LightPrimaryBrush" Color="{StaticResource LightPrimaryColor}"/>
            
            <Color x:Key="LightAccent">#FF3F5865</Color>
            <SolidColorBrush x:Key="LightAccentBrush" Color="{StaticResource LightAccent}"/>
            
            <Color x:Key="LightBackground">#FFF5F5F5</Color>
            <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackground}"/>
            
            <FontFamily x:Key="NormalFont">pack://application:,,,/Fonts/#Poppins</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
