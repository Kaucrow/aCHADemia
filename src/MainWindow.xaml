<Window x:Class="Acadnetmy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Acadnetmy"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <!-- Add right margin to first icon -->
        <fa:ImageAwesome Icon="FileText" Foreground="{StaticResource LightPrimaryBrush}" Width="80" Height="80" Margin="0,0,60,0"/>
        <fa:ImageAwesome Icon="User" Foreground="{StaticResource LightPrimaryBrush}" Width="80" Height="80" Margin="0,0,60,0"/>
        <fa:ImageAwesome Icon="Pencil" Foreground="{StaticResource LightPrimaryBrush}" Width="80" Height="80" Margin="0,0,60,0"/>
        <fa:ImageAwesome Icon="Inbox" Foreground="{StaticResource LightPrimaryBrush}" Width="80" Height="80"/>
    </StackPanel>
</Window>
