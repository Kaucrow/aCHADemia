<Page
  x:Class="aCHADemia.View.Pages.MaintenanceCoursePage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:vm="clr-namespace:aCHADemia.ViewModel"
  xmlns:ext="clr-namespace:aCHADemia.Core.MarkupExtensions"
  xmlns:local="clr-namespace:aCHADemia"
  xmlns:userControls="clr-namespace:aCHADemia.View.UserControls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:fa="http://schemas.fontawesome.io/icons/"
  Title="MaintenanceCoursePage"
  mc:Ignorable="d"
  d:DesignHeight="768"
  d:DesignWidth="1366"
  d:DataContext="{d:DesignInstance Type=vm:MaintenanceCourseViewModel, IsDesignTimeCreatable=True}"
  Background="{StaticResource LightBackgroundBrush}">

    <Grid>
        <userControls:BackButton Command="{Binding GoBackCommand}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="30,30,0,0"
                               IconBrush="{StaticResource LightPrimaryBrush}"
                               TextBrush="{StaticResource LightPrimaryBrush}"/>

        <!-- Title and main container grid -->
        <Grid
        VerticalAlignment="Center"
        HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <!--  Title  -->
            <TextBlock Grid.Row="0"
                Margin="30,20,0,20"
                HorizontalAlignment="Left"
                FontFamily="{StaticResource NormalFont}"
                FontSize="18"
                FontWeight="Medium"
                Foreground="{StaticResource LightAccentBrush}"
                Text="Mantenimiento Curso" />

            <Border Grid.Row="1"
                Width="750"
                Height="550"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="{StaticResource LightAccentBrush}"
                BorderThickness="3"
                CornerRadius="20">

                <!--  Content Container  -->
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <!-- Input for person and search/delete icons with label above -->
                    <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,10,0,20" HorizontalAlignment="Left">
                        <TextBlock
                            Text="ID"
                            Margin="2,0,0,6"
                            FontFamily="{StaticResource NormalFont}"
                            FontSize="14"
                            Foreground="{StaticResource LightPrimaryBrush}" />
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <userControls:TextBoxField
                                Grid.Column="0"
                                Width="250"
                                x:Name="PersonInput"
                                Text="{Binding CourseId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                VerticalAlignment="Center" Height="40" 
                                />
                            <Button Grid.Column="1" Width="50" Height="50" Command="{Binding SearchCourseCommand}" Margin="0,0,0,0"
                                    Background="Transparent" BorderBrush="{x:Null}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <fa:ImageAwesome Icon="Search"
                                                Foreground="{StaticResource LightPrimaryBrush}"
                                                Width="30" Height="30"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                            </Button>
                            <Button Grid.Column="2" Width="50" Height="50" Command="{Binding DeleteCourseCommand}"
                                    Background="Transparent" BorderBrush="{x:Null}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <fa:ImageAwesome Icon="Trash"
                                                Foreground="{StaticResource LightPrimaryBrush}"
                                                Width="30" Height="30"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Data grid -->
                    <userControls:DataGrid Grid.Row="1"
                            ColumnHeaders="{Binding ColumnHeaders}"
                            Rows="{Binding CourseRows}"
                            CanEditColumns="{ext:BoolArray 'true,true,false,false'}"
                            BorderColor="{StaticResource LightAccentBrush}"
                            BorderThickness="2"
                            BorderRadius="6"
                            FontFamily="{StaticResource NormalFont}"
                            FontColor="{StaticResource LightPrimaryBrush}"
                            ColumnWidth="160" />

                    <!--  Save Button  -->
                    <userControls:Button Grid.Row="2"
                                         Command="{Binding SaveCommand}"
                                         ButtonContent="Guardar"
                                         Width="100"
                                         FontSize="12"
                                         CornerRadius="4"
                                         Margin="0,20,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
