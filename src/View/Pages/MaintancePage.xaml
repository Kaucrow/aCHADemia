<Page x:Class="aCHADemia.View.Pages.MaintancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:aCHADemia.View.Pages"
      xmlns:userControls="clr-namespace:aCHADemia.View.UserControls"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage"
      Background="{StaticResource LightBackgroundBrush}">

    <Grid>

        <userControls:BackButton Command="{Binding GoBackCommand}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="30"
                               IconBrush="{StaticResource LightPrimaryBrush}"
                               TextBrush="{StaticResource LightPrimaryBrush}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <userControls:NavigationButton
                Icon="Pencil"
                Text="Materia"
                Brush="{StaticResource LightPrimaryBrush}"
                IconSize="80"
                FontSize="16"
                Margin="0,0,60,0"
                TextMargin="0,20,0,0"/>

            <userControls:NavigationButton
                Icon="FileText"
                Text="Curso"
                Brush="{StaticResource LightPrimaryBrush}"
                IconSize="80"
                FontSize="16"
                Margin="0,0,60,0"
                TextMargin="0,20,0,0"/>

            <userControls:NavigationButton
                Icon="Inbox"
                Text="Seccion"
                Brush="{StaticResource LightPrimaryBrush}"
                IconSize="80"
                FontSize="16"
                Margin="0,0,60,0"
                TextMargin="0,20,0,0"/>

            <userControls:NavigationButton
                Icon="User"
                Text="Persona"
                Brush="{StaticResource LightPrimaryBrush}"
                IconSize="80"
                FontSize="16"
                Margin="0"
                TextMargin="0,20,0,0"/>
            <userControls:NavigationButton
        Icon="Search"
        Command="{Binding NavigateToAddPersonCommand}"
        Brush="{StaticResource LightPrimaryBrush}"
        IconSize="30"
        FontSize="10"
        TextMargin="0,0,0,0"
        Width="40" Height="70"
        Margin="5,-80,0,0"/>
        </StackPanel>
        
    </Grid>
</Page>
