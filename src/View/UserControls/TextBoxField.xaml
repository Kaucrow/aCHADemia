<UserControl x:Class="aCHADemia.View.UserControls.TextBoxField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:aCHADemia.View.UserControls"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="40" d:DesignWidth="200"
             d:DataContext="{d:DesignInstance Type=local:Dropdown}">

    <UserControl.Resources>

        <!-- Transparent ToggleButton Style -->
        <Style x:Key="InvisibleToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent"
                                 BorderBrush="Transparent"
                                 BorderThickness="0">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="Transparent" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="InternalTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{Binding Background, ElementName=root}"/>
            <Setter Property="BorderBrush" Value="{Binding BorderBrush, ElementName=root}"/>
            <Setter Property="BorderThickness" Value="{Binding BorderThickness, ElementName=root}"/>
            <Setter Property="Foreground" Value="{Binding Foreground, ElementName=root}"/>
            <Setter Property="FontFamily" Value="{Binding FontFamily, ElementName=root, FallbackValue='pack://application:,,,/Fonts/#Poppins'}"/>
            <Setter Property="FontSize" Value="{Binding FontSize, ElementName=root, FallbackValue=14}"/>
            <Setter Property="Padding" Value="{Binding Padding, ElementName=root, FallbackValue='8,4'}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!--Input Binding-->
    
    <TextBox x:Name="InternalTextBox"
               Style="{StaticResource InternalTextBoxStyle}"
               Text="{Binding Text, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
</UserControl>