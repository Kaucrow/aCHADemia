<UserControl x:Class="aCHADemia.View.UserControls.DataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             Name="root">

    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="GridTextStyle">
            <Setter Property="FontFamily" Value="{Binding FontFamily, ElementName=root}"/>
            <Setter Property="FontSize" Value="{Binding FontSize, ElementName=root}"/>
            <Setter Property="Foreground" Value="{Binding FontColor, ElementName=root}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{Binding HeaderBackground, ElementName=root}"
                Padding="0,8"
                Margin="0,0,17,0">
            <ScrollViewer x:Name="HeaderScrollViewer"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Padding="0">
                <ItemsControl ItemsSource="{Binding ColumnHeaders, ElementName=root}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Style="{StaticResource GridTextStyle}"
                                           FontWeight="Bold"
                                           FontSize="14"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="1"
                BorderBrush="{Binding BorderColor, ElementName=root, FallbackValue=LightGray}"
                BorderThickness="{Binding BorderThickness, ElementName=root}"
                CornerRadius="{Binding BorderRadius, ElementName=root}"
                ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Scrollable content area -->
                <!-- The main ScrollViewer for the rows -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              CanContentScroll="True"
                              x:Name="ContentScrollViewer"
                              PreviewMouseWheel="ContentScrollViewer_PreviewMouseWheel"
                              ClipToBounds="True"
                              Margin="0,10,0,10">
                    <ItemsControl ItemsSource="{Binding Rows, ElementName=root}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Focusable" Value="False"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0,0,0,1"
                                        BorderBrush="{Binding RowBorderColor, ElementName=root, FallbackValue=LightGray}">
                                    <ItemsControl ItemsSource="{Binding}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <!-- The UniformGrid for cell content within a row -->
                                                <UniformGrid Rows="1"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Width="{Binding ColumnWidth, ElementName=root, FallbackValue=120}">
                                                    <TextBlock Text="{Binding}"
                                                               Style="{StaticResource GridTextStyle}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>